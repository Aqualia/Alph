{
  "name": "new-agent",
  "displayName": "New Agent",
  "configPath": {
    "windows": "%APPDATA%/NewAgent/settings.json",
    "macos": "~/Library/Application Support/NewAgent/settings.json",
    "linux": "~/.config/newagent/settings.json"
  },
  "mcpServerKey": "mcpServers",
  "serverFormat": {
    "command": "string",
    "args": "array",
    "env": "object",
    "cwd": "string"
  },
  "validationRules": {
    "required": ["command"],
    "commandMustExist": true,
    "envVarsMasked": ["API_KEY", "SECRET", "TOKEN"]
  },
  "testScenarios": [
    {
      "name": "basic-configuration",
      "description": "Test basic MCP server configuration",
      "config": {
        "mcpServers": {
          "test-server": {
            "command": "node",
            "args": ["server.js"],
            "env": {
              "API_KEY": "test-key"
            }
          }
        }
      }
    },
    {
      "name": "multiple-servers",
      "description": "Test multiple MCP servers",
      "config": {
        "mcpServers": {
          "server-1": {
            "command": "node",
            "args": ["server1.js"]
          },
          "server-2": {
            "command": "python",
            "args": ["server2.py"],
            "cwd": "/path/to/server2"
          }
        }
      }
    },
    {
      "name": "environment-variables",
      "description": "Test environment variable handling",
      "config": {
        "mcpServers": {
          "env-server": {
            "command": "node",
            "args": ["env-server.js"],
            "env": {
              "API_KEY": "sk-test123456789",
              "DEBUG": "true",
              "PORT": "3000"
            }
          }
        }
      }
    }
  ],
  "platformQuirks": {
    "windows": {
      "pathSeparator": "\\",
      "executableExtension": ".exe",
      "envVarFormat": "%VAR%"
    },
    "macos": {
      "pathSeparator": "/",
      "caseSensitive": true,
      "symlinkSupport": true
    },
    "linux": {
      "pathSeparator": "/",
      "caseSensitive": true,
      "symlinkSupport": true,
      "permissionChecks": true
    }
  }
}
