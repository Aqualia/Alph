{
  "mcpServers": {
    "filesystem-server": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed-dir"],
      "env": {}
    },
    "git-server": {
      "command": "node",
      "args": ["/path/to/git-server.js"],
      "env": {
        "GIT_REPO_PATH": "/path/to/repo"
      }
    }
  }
}
