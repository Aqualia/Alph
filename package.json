{
  "name": "@aqualia/alph-cli",
  "version": "0.2.5",
  "description": "Alph CLI - Universal MCP server management for AI agents. Configure Gemini, Cursor, Claude and other AI tools with MCP servers.",
  "main": "dist/index.js",
  "bin": {
    "alph": "./dist/index.js"
  },
  "type": "commonjs",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:performance": "jest tests/performance",
    "test:windows": "cross-env-shell \"npm test -- --testPathPattern='(windows|all)' --testPathIgnorePatterns='(linux|darwin)'\"",
    "test:macos": "cross-env-shell \"npm test -- --testPathPattern='(darwin|all)' --testPathIgnorePatterns='(windows|linux)'\"",
    "test:linux": "cross-env-shell \"npm test -- --testPathPattern='(linux|all)' --testPathIgnorePatterns='(windows|darwin)'\"",
    "assets:banner": "node scripts/generate-banner-svg.js",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "prepack": "npm run build && npm run assets:banner",
    "prepublishOnly": "npm run build && npm run assets:banner",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:ci": "npm audit --audit-level=moderate"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "USER_GUIDE.md",
    "ARCHITECTURE.md",
    "SECURITY.md",
    "TROUBLESHOOTING.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mcp",
    "ai",
    "agents",
    "cli",
    "configuration",
    "alph-cli",
    "gemini",
    "cursor",
    "claude",
    "model-context-protocol",
    "ai-development",
    "developer-tools",
    "automation",
    "setup"
  ],
  "author": "Aqualia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aqualia/Alph.git"
  },
  "bugs": {
    "url": "https://github.com/Aqualia/Alph/issues"
  },
  "homepage": "https://github.com/Aqualia/Alph#readme",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@inquirer/core": "^10.1.15",
    "@inquirer/figures": "^1.0.13",
    "chalk": "^5.6.0",
    "commander": "^11.1.0",
    "inquirer": "^12.9.3",
    "yoctocolors-cjs": "^2.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.11",
    "@inquirer/type": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3"
  }
}
